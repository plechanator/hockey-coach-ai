{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "types": ["node", "vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },

    "noEmit": true
  },

  "include": [
    "client",
    "server",
    "shared"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
